{
    "manifest_version": 3,
    "name": "Mindful Browsing",
    "version": "1.0",
    "description": "Gradually overlay images on distracting sites based on usage time",
    "permissions": [
      "storage",
      "activeTab",
      "alarms"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["overlay.css"],
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "options_page": "options.html"
  }
  